{% block body %}
    <head>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('/css/style.css') }}">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        {% endblock %}

        {% block fontawesome %}
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.13.0/css/all.css" integrity="sha384-Bfad6CLCknfcloXFOyFnlgtENryhrpZCe29RTifKEixXQZ38WheV+i/6YWSzkz3V" crossorigin="anonymous">
        {% endblock %}

        <title>login !</title>
    </head>
       <body class="bg-warning " style="justify-content: center">
                <form method="post" class="mt-5 ">
                    <div class="row text-center">
                        <div class="col">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.username }} <a href="{{ path('app_logout') }}"><i class="fas fa-walking" style="font-size: 40px;color: black"></i></a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    </div>

                    <h1 class="text-center"  style="font-family: Lobster, cursive;font-size: 40px">LOGIN !</h1>
                    <div class="row justify-content-center">
                         <form>

                             <div class="row shadow-lg" style="height: 30vh;border-radius: 10px">
                                 <div class="col-md-12">
                                     <label for="inputEmail">Email</label>
                                     <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control " required autofocus>

                                     <div class="col-md-12">
                                         <label for="inputPassword" class="mt-3">Password</label>
                                         <input type="password" name="password" id="inputPassword" class="form-control" required>
                                         <input type="hidden" name="_csrf_token"
                                                value="{{ csrf_token('authenticate') }}">
                                         <button class="btn btn-outline-dark mt-3 col-12" type="submit">
                                             login
                                         </button>
                                         <h2 class="spinner-border justify-content-center mt-2"></h2>
                                     </div>
                                 </div>


                             </div>
                         </form>
                     </div>

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

       </body>
{% endblock %}
