{% extends 'base.html.twig' %}


{% block title %} Mes realisation {% endblock %}

{% block body %}


<div class="container-fluid mt-5">
    <h1 class="text-center mt-5 pt-5" style="font-family: Lobster, cursive;font-size: 40px">Mes Realisation</h1>
    <div class="row  text-center mt-5" data-aos="fade-up">
        {% for realisation in realisations %}
            <div class="col-md-4 ">
                <div class="card mb-3 shadow-lg">
                    <img src="{{ asset('public/files/' ~ realisation.filename()) }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ realisation.titre }}</h5>
                        <p class="card-text">{{ realisation.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

